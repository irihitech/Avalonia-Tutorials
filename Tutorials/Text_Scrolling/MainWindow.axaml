<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Text_Scrolling.MainWindow"
        Title="Text_Scrolling">
    <Grid ColumnDefinitions="*, *">
        <TextBox Name="text1" Grid.Column="0" Height="200" AcceptsReturn="True" Text="{ReflectionBinding Text}"></TextBox>
        <TextBox Name="text2" Grid.Column="1" Height="200" AcceptsReturn="True" Text="{ReflectionBinding Text}"></TextBox>
    </Grid>
</Window>
